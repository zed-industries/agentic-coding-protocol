{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM", "DOM.AsyncIterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "types": ["node", "vitest/globals"],
    "rootDir": "typescript",
    "outDir": "dist",
    "paths": {
      "vitest": ["./node_modules/vitest"]
    }
  }
}
